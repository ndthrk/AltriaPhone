<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/orchid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/milkshake"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/orchid1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/cardview_avatar"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orchid1"
        android:background="@drawable/border9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

            <EditText
                android:id="@+id/register_user"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_person_black_login_24dp"
                android:hint="Username"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/register_pass"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:background="@drawable/border"
                android:hint="Password"
                android:inputType="textPassword"/>

        <EditText
            android:id="@+id/register_ten"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/user_circle_24"
            android:hint="Name"/>

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/border"
            android:drawableLeft="@android:drawable/stat_sys_phone_call_on_hold"
            android:hint="Phone number"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_selector3"
                android:text="register"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>