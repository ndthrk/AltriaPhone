<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="8dp"
    android:id="@+id/cardview_invoice"
    android:background="@drawable/border7"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/inv_img"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/white_bg"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
  <TextView
        android:layout_marginTop="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="3dp"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:id="@+id/inv_id"
        android:text="Mã hoá đơn:"
        android:textColor="@color/colorRed"
        android:gravity="center_vertical|left" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:orientation="horizontal">
        <TextView
            android:paddingStart="16dp"
            android:paddingEnd="3dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="32dp"
            android:id="@+id/inv_nameProduct"
            android:gravity="center_vertical|left" />
            <TextView
            android:paddingEnd="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:id="@+id/inv_quantity"
            android:textColor="@color/colorRed"
            android:text="SL: 0"
            android:gravity="center_vertical|right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:textStyle="bold"
                android:text="Info"
                android:gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/inv_name_and_Phone"
            android:layout_marginStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"/>
        </LinearLayout>
    <TextView
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inv_address"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical|right"/>
    </LinearLayout>
</LinearLayout>
